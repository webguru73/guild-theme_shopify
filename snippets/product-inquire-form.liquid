<div class="popup popup-inquire mfp-hide" id="popup-inquire">
  <div class="popup__content">
    <div class="form form--inquire">
      <!-- <form action="?" method="post"> -->
        {% form 'contact' %}
        <div class="form__head">
          <h3>Inquire</h3>

          <p>Fill out the form below and we will respond as soon as we can.</p>
        </div><!-- /.form__head -->

        <div class="form__body">
          <div class="form__row">
            <label for="field-first-last-name" class="hidden">FIRST &amp; LAST NAME</label>

            <div class="form__controls">
              <input type="text" class="field" name="contact[name]" id="field-first-last-name" value="" placeholder="FIRST & LAST NAME">
            </div><!-- /.form__controls -->
          </div><!-- /.form__row -->

          <div class="form__row">
            <label for="field-email2" class="hidden">EMAIL</label>

            <div class="form__controls">
              <input type="email" class="field" name="contact[email]" id="field-email2" value="" placeholder="EMAIL">
            </div><!-- /.form__controls -->
          </div><!-- /.form__row -->

          <div class="form__row form__cols">
            <div class="form__col form__col--1of2">
              <label for="field-phone" class="hidden">PHONE</label>

              <div class="form__controls">
                <input type="tel" class="field" name="contact[phone]" id="field-phone" value="" placeholder="PHONE">
              </div><!-- /.form__controls -->
            </div><!-- /.form__col form__col-/-1of2 -->

            <div class="form__col form__col--1of2">
              <label for="field-best-time-to-call" class="hidden">BEST TIME TO CALL</label>

              <div class="form__controls">
                <div class="select">
                  <select name="field-best-time-to-call" id="field-best-time-to-call">
                    <option value="">BEST TIME TO CALL</option>
                    <option value="">Option 1</option>
                    <option value="">Option 2</option>
                    <option value="">Option 3</option>
                  </select>
                </div><!-- /.select -->
              </div><!-- /.form__controls -->
            </div><!-- /.form__col form__col-/-1of2 -->
          </div><!-- /.form__row -->

          <div class="form__row form__row--secondary">
            <label for="field-comment" class="hidden">COMMENTS</label>

            <div class="form__controls form__controls--textarea">
              <textarea class="textarea" name="contact[comment]" id="field-comment" placeholder="COMMENTS"></textarea>
            </div><!-- /.form__controls -->
          </div><!-- /.form__row -->
        </div><!-- /.form__body -->

        <div class="form__actions"> 
          <input type="submit" value="Submit" class="link-primary link-primary--alt form__btn">
        </div><!-- /.form__actions -->
      {% endform %}
    </div><!-- /.form form-/-inquire -->
  </div><!-- /.popup__content -->
</div><!-- /.popup popup-inquire --> 