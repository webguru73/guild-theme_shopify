        "name": "Guild",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Guild Image"
            },
			{
                "type": "text",
                "id": "name",
                "label": "Guild Name"
            },
			{
                "type": "textarea",
                "id": "description",
                "label": "Description"
            },
			{
                "type": "text",
                "id": "phone",
                "label": "Phone"
            },
			{
                "type": "text",
                "id": "workday_time",
                "label": "MONDAY - FRIDAY"
            },
			{
                "type": "text",
                "id": "weekend_time",
                "label": "SATURDAY and SUNDAY"
            }
        ]
        }
    ],
    "presets": [
        {
            "name": "Visit Promotions",
