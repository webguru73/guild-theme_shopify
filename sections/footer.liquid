<footer class="footer">
  <div class="footer__group row">
    <div class="footer__col col col--size-3">
      <div class="footer__aside">
        <aside class="footer__aside-group">
          <h3>{{ section.settings.subscribe_header }}</h3>

          <div class="form">
            <form action="?" method="post">
              <div class="form__row row">
                <div class="form__col form__col--1of2">
                  <label for="field-first-name" class="form__label hidden">First Name</label>

                  <div class="form__controls">
                    <input type="text" class="field" name="field-first-name" id="field-first-name" value="" placeholder="First Name">
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->

                <div class="form__col form__col--1of2">
                  <label for="field-last-name" class="form__label hidden">Last Name</label>

                  <div class="form__controls">
                    <input type="text" class="field" name="field-last-name" id="field-last-name" value="" placeholder="Last Name">
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->
              </div><!-- /.form__row -->

              <div class="form__row row">
                <label for="field-email" class="form__label hidden">Email</label>

                <div class="form__controls">
                  <input type="email" class="field" name="field-email" id="field-email" value="" placeholder="Email">
                </div><!-- /.form__controls -->
              </div><!-- /.form__row -->

              <div class="form__actions">
                <input type="submit" value="Subscribe" class="link-primary form__btn js-form-next">
              </div><!-- /.form__actions -->
            </form>
          </div><!-- /.form -->
        </aside><!-- /.footer__aside -->

        <aside class="footer__aside-group hidden">
          <aside class="footer__aside-content">
            <h3>Thank <br> You</h3>

            <p>Care to share more? Squis imaiost lab ipsum laborat.</p>
          </aside><!-- /.footer__aside -->

          <div class="form">
            <form action="?" method="post">
              <div class="form__row row">
                <label for="field-street" class="form__label hidden">Street</label>

                <div class="form__controls">
                  <input type="email" class="field" name="field-street" id="field-street" value="" placeholder="Street">
                </div><!-- /.form__controls -->
              </div><!-- /.form__row -->

              <div class="form__row row">
                <div class="form__col form__col--1of2">
                  <label for="field-city" class="form__label hidden">City</label>

                  <div class="form__controls">
                    <input type="text" class="field" name="field-city" id="field-city" value="" placeholder="City">
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->

                <div class="form__col form__col--1of2">

                  <label for="field-country" class="form__label hidden">Country</label>

                  <div class="form__controls">
                    <div class="select">
                      <select name="field-country" id="field-country">
                        <option value="" selected disabled>Country</option>
                        <option value="1">Country 1</option>
                        <option value="2">Country 2</option>
                        <option value="3">Country 3</option>
                      </select>
                    </div><!-- /.select -->
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->
              </div><!-- /.form__row -->

              <div class="form__row row">
                <div class="form__col form__col--1of2">
                  <label for="field-state" class="form__label hidden">State</label>

                  <div class="form__controls">
                    <div class="select">
                      <select name="field-state" id="field-state">
                        <option value="" selected disabled>State</option>
                        <option value="1">State 1</option>
                        <option value="2">State 2</option>
                        <option value="3">State 3</option>
                      </select>
                    </div><!-- /.select -->
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->

                <div class="form__col form__col--1of2">
                  <label for="field-zip-code" class="form__label hidden">Zip Code</label>

                  <div class="form__controls">
                    <input type="number" class="field" name="field-zip-code" id="field-zip-code" value="" placeholder="Zip Code">
                  </div><!-- /.form__controls -->
                </div><!-- /.form__col form__col-/-1of2 -->
              </div><!-- /.form__row -->

              <div class="form__actions">
                <input type="submit" value="Submit" class="link-primary form__btn">
              </div><!-- /.form__actions -->
            </form>
          </div><!-- /.form -->
        </aside><!-- /.footer__aside -->
      </div><!-- /.col -->

      <div class="footer__actions row">
                    
      {%- assign footer_linklist_1 = section.settings.footer_linklist_1 -%}
      {% if linklists[footer_linklist_1].links.size > 0 %}
        <nav class="footer__nav col col--1of2">
          <ul>
            {% for link in linklists[footer_linklist_1].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </nav><!-- /.footer__nav -->
      {% endif %}
      {%- assign footer_linklist_2 = section.settings.footer_linklist_2 -%}
      {% if linklists[footer_linklist_2].links.size > 0 %}
        <nav class="footer__nav col col--1of2">
          <ul>
            {% for link in linklists[footer_linklist_2].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </nav><!-- /.footer__nav -->
      {% endif %}
      </div><!-- /.footer__actions -->
    </div><!-- /.col col-/-2of3 -->

    <div class="footer__col col col--size-4">
      <div class="footer__content">
        <ul class="list-logos">
          <li>
            <a href="{{ section.settings.footer_logo_1_link }}">
              <img src="{{ section.settings.footer_logo_1 | img_url: 'master' }}" alt="" width="224" height="119">
            </a>
          </li>

          <li>
            <a href="{{ section.settings.footer_logo_2_link }}">
              <img src="{{ section.settings.footer_logo_2 | img_url: 'master' }}" alt="" width="233" height="89">
            </a>
          </li>

          <li>
            <a href="{{ section.settings.footer_logo_3_link }}">
              <img src="{{ section.settings.footer_logo_3 | img_url: 'master' }}" alt="" width="256" height="83">
            </a>
          </li>
        </ul><!-- /.list-logos -->

        <address>
          {{ section.settings.street }} <br>
          {{ section.settings.city }} <br>
          <span>{{ section.settings.phone_num }}</span>
        </address>
      </div><!-- /.footer__content -->
    </div><!-- /.col col-/-1of3 -->
  </div><!-- /.footer__group -->

  <div class="footer__group footer__group--alt">
    <img src="{{ section.settings.shop_logo | img_url: "150x"}}" alt="" width="120" height="151">

    <p class="copyright">&copy; {{ section.settings.copyright_text }}</p>
  </div><!-- /.footer__group -->
</footer><!-- /.footer -->
{% comment %}
<footer>

  {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}
  <ul>
    {% for social in social_accounts %}
      {%- assign social_handle = social | handleize -%}
      {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
      {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

      {% if settings[social_link] != blank %}
        <li>
          <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
            {% include social_icon %}
            <span class="icon-fallback-text">{{ social }}</span>
          </a>
        </li>
      {% endif %}

    {% endfor %}
  </ul>

  {% if section.settings.show_payment_icons %}
    {% unless shop.enabled_payment_types == empty %}
      {%- assign payment_icons_available = 'amazon_payments,american_express,apple_pay,bitcoin,cirrus,dankort,diners_club,discover,dogecoin,dwolla,forbrugsforeningen,interac,jcb,litecoin,maestro,master,paypal,visa' | split: ',' -%}

      <span class="visually-hidden">{{ 'layout.footer.payment_methods' | t }}</span>
      <ul class="payment-icons">
        {% for type in shop.enabled_payment_types %}
          {% if payment_icons_available contains type %}
            <li>
              {%- assign icon_name = type | prepend: 'icon-' -%}
              {% include icon_name %}
              <span class="visually-hidden">{{ type | capitalize | replace: '_', ' ' }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    {% endunless %}
  {% endif %}

  {%- assign footer_linklist = section.settings.footer_linklist -%}
  {% if linklists[footer_linklist].links.size > 0 %}
    <ul>
      {% for link in linklists[footer_linklist].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  <div>
    <small>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. {{ powered_by_link }}</small>
  </div>
</footer>
{% endcomment %}
